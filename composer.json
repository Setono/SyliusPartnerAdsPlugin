{
    "name": "setono/sylius-partner-ads-plugin",
    "type": "sylius-plugin",
    "description": "Sylius plugin that integrates Partner Ads tracking.",
    "keywords": [
        "sylius",
        "sylius-plugin",
        "partner ads",
        "setono"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "nyholm/psr7": "^1.1",
        "psr/http-client": "^1.0",
        "sylius/sylius": "^1.3",
        "symfony/event-dispatcher": "^3.4 || ^4.1 || ^5.0",
        "symfony/messenger": "^4.3 || ^5.0",
        "thecodingmachine/safe": "^1.0",
        "webmozart/assert": "^1.4"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.0",
        "korbeil/phpstan-generic-rules": "^0.2.1",
        "kriswallsmith/buzz": "^1.0",
        "matthiasnoback/symfony-config-test": "^4.0",
        "matthiasnoback/symfony-dependency-injection-test": "^4.0",
        "phpspec/phpspec": "^5.0 || ^6.0",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-doctrine": "^0.12",
        "phpstan/phpstan-strict-rules": "^0.12",
        "phpstan/phpstan-webmozart-assert": "^0.12",
        "phpunit/phpunit": "^8.0",
        "roave/security-advisories": "dev-master",
        "sensiolabs/security-checker": "^5.0",
        "sylius-labs/coding-standard": "^3.1",
        "symfony/browser-kit": "^3.4 || ^4.1 || ^5.0",
        "symfony/debug-bundle": "^3.4 || ^4.1 || ^5.0",
        "symfony/dotenv": "^4.2 || ^5.0",
        "symfony/intl": "^3.4 || ^4.1 || ^5.0",
        "symfony/serializer-pack": "^1.0",
        "symfony/web-profiler-bundle": "^3.4 || ^4.1 || ^5.0",
        "symfony/web-server-bundle": "^3.4 || ^4.1 || ^5.0",
        "thecodingmachine/phpstan-safe-rule": "^1.0@beta"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Setono\\SyliusPartnerAdsPlugin\\": "src/",
            "Tests\\Setono\\SyliusPartnerAdsPlugin\\": "tests/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/Application/Kernel.php"
        ]
    },
    "prefer-stable": true,
    "scripts": {
        "analyse": [
            "vendor/bin/phpstan analyse -c phpstan.neon -l max src --ansi"
        ],
        "check-style": "vendor/bin/ecs check src/ spec/ --ansi",
        "fix-style": "vendor/bin/ecs check --fix src/ spec/ --ansi",
        "test": [
            "vendor/bin/phpunit",
            "vendor/bin/phpspec run"
        ]
    }
}
